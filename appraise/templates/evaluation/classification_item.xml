{% extends "evaluation/classification_task.xml" %}
{% block items %}{% for item in items %}  <classification-item id="{{item.id}}" sentence_id="{{item.sentence_id}}" user="{{item.user}}">
    <source>{{item.source}}</source>
    <system{{item.system}} name="{{item.system_name}}">{{item.system_text}}</system{{item.system}}>
    <errors>
{%if item.missing_content_words %}      <error type="missing_content_words"/>{% endif %}
{%if item.content_words_wrong %}      <error type="content_words_wrong"/>{% endif %}
{%if item.wrong_functional_words %}      <error type="wrong_functional_words"/>{% endif %}
{%if item.incorrect_word_forms %}      <error type="incorrect_word_forms"/>{% endif %}
{%if item.incorrect_word_order %}      <error type="incorrect_word_order"/>{% endif %}
{%if item.incorrect_punctuation %}      <error type="incorrect_punctuation"/>{% endif %}
{%if item.other_error %}      <error type="other_error"/>{% endif %}
    </errors>
{% if item.comments %}    <comments>{{item.comments}}</comments>{% endif %}
  </classification-item>
{%endfor %}{% endblock %}